{
    "name": "ethileo/events-pro",
    "description": "Enterprise-grade event management system for WordPress with clean architecture",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Ethileo Team",
            "email": "dev@ethileo.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "php-di/php-di": "^6.4",
        "vlucas/phpdotenv": "^5.5",
        "endroid/qr-code": "^4.8",
        "league/fractal": "^0.20",
        "monolog/monolog": "^2.9",
        "symfony/http-foundation": "^5.4",
        "symfony/console": "^5.4",
        "ramsey/uuid": "^4.7",
        "nesbot/carbon": "^2.66"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "mockery/mockery": "^1.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "brain/monkey": "^2.6",
        "fakerphp/faker": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "Ethileo\\EventsPro\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Ethileo\\EventsPro\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite Unit",
        "test:integration": "phpunit --testsuite Integration",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpcs": "phpcs --standard=PSR12 src/",
        "phpcbf": "phpcbf --standard=PSR12 src/",
        "phpstan": "phpstan analyse src/ --level=8",
        "check": [
            "@phpcs",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
